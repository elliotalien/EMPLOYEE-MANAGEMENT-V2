<%- include('include/_header') %>

    <main class="w-full h-screen sm:min-h-screen sm:bg-gradient-to-br from-[#301F81] to-[#0F0441] flex items-center justify-center">
        <div class="box relative w-full lg:max-w-[1020px] h-screen sm:h-[600px] bg-white sm:rounded-[2rem] sm:shadow-[0_60px_40px_-30px_rgba(0,0,0,0.27)]">
            <div class="inner-box relative w-full h-full flex flex-col sm:flex-row lg:p-6">
                <!-- Left side content -->
                <div class="forms-wrap w-full sm:w-[55%] lg:w-[45%] h-full bg-white sm:rounded-[2rem] flex items-center">  
                    <div class="w-full px-6 py-8 sm:px-12">
                        <div class="flex flex-col gap-8 sm:gap-12 max-w-[360px] mx-auto">
                            <div class="text-center sm:text-left">
                                <h2 class="text-[2rem] lg:text-[35px] font-bold text-[#151111] font-montserrat">Email Verification</h2>
                                <p class="text-[#151111]/70 text-sm font-montserrat mt-2">Please check your email for verification link</p>
                                <div class="mt-4">
                                    <span class="text-sm text-[#151111]/70">Already verified?</span>
                                    <a href="/login" class="text-sm text-[#301F81] hover:text-[#0F0441] font-medium ml-1">Login</a>
                                </div>
                            </div>

                            <div class="space-y-8">
                                <form action="/api/auth/verify" autocomplete="off" class="w-full flex flex-col items-center sm:items-start gap-8" method="post" id="verification-form">
                                    <div class="flex justify-center sm:justify-start items-center space-x-2">
                                        <input type="number" name="otpInput1" class="w-12 h-12 text-center border-2 border-gray-300 rounded-lg focus:outline-none focus:border-[#301F81] transition-colors" maxlength="1" pattern="\d*" inputmode="numeric" required />
                                        <input type="number" name="otpInput2" class="w-12 h-12 text-center border-2 border-gray-300 rounded-lg focus:outline-none focus:border-[#301F81] transition-colors" maxlength="1" pattern="\d*" inputmode="numeric" required />
                                        <input type="number" name="otpInput3" class="w-12 h-12 text-center border-2 border-gray-300 rounded-lg focus:outline-none focus:border-[#301F81] transition-colors" maxlength="1" pattern="\d*" inputmode="numeric" required />
                                        <input type="number" name="otpInput4" class="w-12 h-12 text-center border-2 border-gray-300 rounded-lg focus:outline-none focus:border-[#301F81] transition-colors" maxlength="1" pattern="\d*" inputmode="numeric" required />
                                        <input type="number" name="otpInput5" class="w-12 h-12 text-center border-2 border-gray-300 rounded-lg focus:outline-none focus:border-[#301F81] transition-colors" maxlength="1" pattern="\d*" inputmode="numeric" required />
                                        <input type="number" name="otpInput6" class="w-12 h-12 text-center border-2 border-gray-300 rounded-lg focus:outline-none focus:border-[#301F81] transition-colors" maxlength="1" pattern="\d*" inputmode="numeric" required />
                                    </div>
                                    
                                    <div id="error-message" class="text-red-500 text-sm text-center w-full hidden"></div>
                                    
                                    <button type="submit" class="w-full bg-[#301F81] text-white py-3 rounded-lg hover:bg-[#0F0441] transition duration-300 disabled:opacity-50 disabled:cursor-not-allowed" id="verify-button">
                                        Verify Email
                                    </button>
                                    
                                    <div class="text-center w-full flex justify-center flex-col">
                                        <button type="button" id="resendButton" class="text-sm text-gray-600 hover:text-indigo-600 transition duration-300">
                                            Resend OTP
                                        </button>
                                        <div id="timer" class="text-sm text-gray-500 mt-1"></div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Right side content -->
                <div class="hidden sm:block w-[55%] h-full overflow-hidden">
                    <%- include('include/_animatedImage') %>
                </div>
            </div>
        </div>
    </main>

    <div id="toast" class="fixed top-4 right-4 z-50 hidden">
        <div id="toast-content" class="flex items-center p-4 text-white rounded-lg shadow"></div>
    </div>

    <script src="/js/userAuth.js"></script>
</body>

</html>