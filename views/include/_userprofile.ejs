<div class="flex justify-center">
<div class="rightSide m-3 md:m-7 min-h-fit  bg-white rounded-xl shadow-lg lg:w-[70%] max-1000:w-[90%] w-full ">
    <!-- Profile Header -->
    <div class="relative h-48 bg-gradient-to-r from-[#301F81] to-[#0F0441] rounded-tl-xl rounded-tr-xl">
        <div class="absolute -bottom-16 left-8">
            <div class="relative">
                <img id="profileImage"
                    src="<%= user.profileImage.url %>"
                    data-original-src="<%= user.profileImage.url %>"
                    alt="Profile Picture"
                    class="w-32 h-32 rounded-full border-4 border-white object-cover bg-white">
                <label for="imageUpload"
                    class="absolute bottom-[4px] right-[7px] w-8 h-8 flex items-center justify-center bg-[#301F81] text-white rounded-full cursor-pointer hover:bg-[#0F0441] transition-colors duration-200 shadow-lg">
                    <i class="fas fa-camera text-sm"></i>
                </label>
                <input type="file" id="imageUpload" name="profileImage" class="hidden" accept="image/*">
            </div>
        </div>
    </div>

    <!-- Profile Content -->
    <div class="pt-20 px-8 pb-8">
        <form id="profileForm" class="space-y-10" enctype="multipart/form-data">
            <!-- Personal Information -->
            <div class="space-y-5">
                <h2 class="text-2xl font-semibold text-primaryText">Personal Information</h2>
                <div class="grid md:grid-cols-2 gap-5">
                    <div class="shadow-[0px_18px_40px_0px_rgba(112,144,176,0.12)] p-5 rounded-xl space-y-3">
                        <label class="block text-gray-500">Username</label>
                        <input type="text" id="username" name="username" value="<%= user.username || '' %>" 
                               class="w-full p-3 rounded-lg border border-gray-200 focus:border-[#301F81] focus:outline-none">
                    </div>
                    <div class="shadow-[0px_18px_40px_0px_rgba(112,144,176,0.12)] p-5 rounded-xl space-y-3">
                        <label class="block text-gray-500">Email</label>
                        <input type="email" id="email" name="email" value="<%= user.email %>" readonly
                               class="w-full p-3 rounded-lg border border-gray-200 bg-gray-50">
                    </div>
                    <div class="shadow-[0px_18px_40px_0px_rgba(112,144,176,0.12)] p-5 rounded-xl space-y-3">
                        <label class="block text-gray-500">Phone</label>
                        <input type="tel" id="phone" name="phone" value="<%= user.phone || '' %>"
                               class="w-full p-3 rounded-lg border border-gray-200 focus:border-[#301F81] focus:outline-none">
                    </div>
                    <div class="shadow-[0px_18px_40px_0px_rgba(112,144,176,0.12)] p-5 rounded-xl space-y-3">
                        <label class="block text-gray-500">Role</label>
                        <input type="text" id="role" name="role" value="<%= user.role %>" readonly
                               class="w-full p-3 rounded-lg border border-gray-200 bg-gray-50" autocomplete="username">
                    </div>
                </div>
            </div>

            <!-- Change Password Section -->
            <div class="space-y-5">
                <h2 class="text-2xl font-semibold text-primaryText">Change Password</h2>
                <div class="grid md:grid-cols-2 gap-5">
                    <div class="shadow-[0px_18px_40px_0px_rgba(112,144,176,0.12)] p-5 rounded-xl space-y-3">
                        <label class="block text-gray-500">Current Password</label>
                        <div class="relative">
                            <input type="password" id="currentPassword" name="currentPassword"
                                   class="w-full p-3 rounded-lg border border-gray-200 focus:border-[#301F81] focus:outline-none" autocomplete="current-password">
                        </div>
                    </div>
                    <div class="shadow-[0px_18px_40px_0px_rgba(112,144,176,0.12)] p-5 rounded-xl space-y-3">
                        <label class="block text-gray-500">New Password</label>
                        <div class="relative">
                            <input type="password" id="newPassword" name="newPassword"
                                   class="w-full p-3 rounded-lg border border-gray-200 focus:border-[#301F81] focus:outline-none" autocomplete="new-password">
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex flex-col sm:flex-row justify-end gap-3 sm:gap-4 mt-8">
                <button type="button" id="deleteAccountBtn"
                    class="w-full sm:w-[140px] px-6 py-2 text-white bg-red-500 hover:bg-red-600 rounded-full transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 text-sm">
                    Delete Account
                </button>
                <button type="submit"
                    class="w-full sm:w-[140px] px-6 py-2 text-white bg-[#301F81] hover:bg-[#0F0441] rounded-full transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-[#301F81] focus:ring-offset-2 text-sm">
                    Save Changes
                </button>
            </div>
        </form>
    </div>
</div>
</div>