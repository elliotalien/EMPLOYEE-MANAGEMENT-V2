<%- include('include/_header') %>

    <main class="w-full h-screen sm:min-h-screen sm:bg-gradient-to-br from-[#301F81] to-[#0F0441] flex items-center justify-center">
        <div class="box relative w-full lg:max-w-[1020px] h-screen sm:h-[600px] bg-white sm:rounded-[2rem] sm:shadow-[0_60px_40px_-30px_rgba(0,0,0,0.27)]">
            <div class="inner-box relative w-full h-full flex flex-col sm:flex-row p-6">
                <!-- Left side content -->
                <div class="forms-wrap w-full sm:w-[55%] lg:w-[45%] h-screen sm:h-full bg-white sm:rounded-[2rem] flex items-center justify-center sm:p-8 lg:p-12">  
                    <form action="/api/auth/login" class="w-full max-w-[360px]" method="post" id="loginForm">
                        <div class="flex flex-col gap-20">
                            <div>
                                <h2 class="text-[2rem] lg:text-[2.4rem] font-bold text-[#151111]  font-montserrat">Welcome Back</h2>
                                <p class="text-[#151111]/70 text-sm  font-montserrat">Please enter your details.</p>
                            </div>

                            <div class="space-y-6 flex flex-col gap-5">
                                <div class="space-y-6">
                                    <div class="relative">
                                        <input type="text" id="usernameOrEmail" name="usernameOrEmail" 
                                            class="w-full h-12 bg-transparent text-[#151111] text-base border-b border-[#151111]/20 focus:border-[#301F81] outline-none" 
                                            placeholder="Username or Email"
                                            required autocomplete="username" />
                                        <div class="text-sm text-red-500 mt-1 h-5" id="usernameOrEmailError"></div>
                                    </div>

                                    <div class="relative">
                                        <input type="password" id="password" name="password" 
                                            class="w-full h-12 bg-transparent text-[#151111] text-base border-b border-[#151111]/20 focus:border-[#301F81] outline-none" 
                                            placeholder="Password"
                                            required autocomplete="current-password" />
                                        <div class="text-sm text-red-500 mt-1 h-5" id="passwordError"></div>
                                    </div>
                                </div>

                                <div class="flex justify-between items-center">
                                    <div class="flex items-center">
                                        <input type="checkbox" id="remember" name="remember" class="mr-2">
                                        <label for="remember" class="text-sm text-[#151111]/70">Remember me</label>
                                    </div>
                                    <a href="/forgotpassword" class="text-sm text-[#301F81] hover:text-[#0F0441]">Forgot password?</a>
                                </div>

                                <button type="submit" style="margin-top: 0 !important;"
                                    class="w-full h-12 bg-[#301F81] text-white rounded-lg font-medium hover:bg-[#251661] transition-colors">
                                    Sign In
                                </button>

                                <p class="text-center text-[#151111]/70 text-sm">
                                    Don't have an account? 
                                    <a href="/signup" class="text-[#301F81] hover:text-[#0F0441] font-medium">Sign up</a>
                                </p>
                            </div>
                        </div>
                    </form>
                </div>

                <!-- Right side content -->
                <div class="hidden sm:block w-[55%] h-full overflow-hidden">
                    <%- include('include/_animatedImage') %>
                </div>
            </div>
        </div>
    </main>

    <script src="/js/userAuth.js"></script>
</body>

</html>