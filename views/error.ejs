<%- include('include/_header') %>
<main class="min-h-screen bg-gradient-to-br from-[#301F81] to-[#0F0441] flex items-center justify-center p-4">
    <div class="max-w-xl w-full text-center content-animate backdrop-blur-md rounded-lg p-8 shadow-xl">
        <div class="mb-8">
            <h1 class="text-9xl font-bold text-white"><%= title.includes('404') ? '404' : '500' %></h1>
            <p class="text-2xl font-semibold text-white/90 mt-4"><%= title %></p>
            <p class="text-white/70 mt-2"><%= message %></p>
        </div>
        
        <div class="float-animate">
            <svg class="mx-auto h-16 w-16 text-white/80" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
            </svg>
        </div>
        
        <div class="mt-8">
            <a href="/home" class="inline-block px-6 py-3 text-base font-medium rounded-md text-[#301F81] bg-white hover:bg-white/90 transition-colors duration-200">
                Back to Home
            </a>
        </div>
    </div>

    <!-- Toast container for notifications -->
    <div id="toastContainer" class="fixed top-4 right-4 z-50"></div>
</main>
</body>
</html>